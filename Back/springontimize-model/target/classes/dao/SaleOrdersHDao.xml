<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="saleordersh"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>id</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>id</Column>
    </UpdateKeys>
    <GeneratedKey>id</GeneratedKey>

    <Queries>
        <Query id="default">
            <AmbiguousColumns>
                <AmbiguousColumn name="saleordersh_id" prefix="sh" databaseName="id" />
                <AmbiguousColumn name="saleordersl_id" prefix="sl" databaseName="id" />
            </AmbiguousColumns>
            <ValidColumns>
                <Column>saleordersh_id</Column>
                <Column>user_</Column>
                <Column>saledate</Column>
                <Column>salestatus</Column>
                <Column>dest_address</Column>
                <Column>dest_cp</Column>
                <Column>dest_city</Column>
                <Column>country_id</Column>
                <Column>dest_name</Column>
                <Column>card_number</Column>
                <Column>card_exp</Column>
                <Column>card_ccv</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
               SELECT
                  #COLUMNS#,SUM(total) AS saleordertotal
               FROM
                  ${mainschema}.saleordersh AS sh
               INNER JOIN
                ${mainschema}.saleordersl AS sl
               ON
                sl.saleordersh_id = sh.id
                 #WHERE#
               GROUP BY
                sh.id
               #ORDER#
            ]]>
            </Sentence>
        </Query>
    </Queries>

</JdbcEntitySetup>